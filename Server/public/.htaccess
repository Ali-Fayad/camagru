# Enable URL rewriting
<IfModule mod_rewrite.c>
  Options -MultiViews
  RewriteEngine On

  # Skip existing files/directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Route everything else to index.php
  RewriteRule ^ index.php [L]
</IfModule>
